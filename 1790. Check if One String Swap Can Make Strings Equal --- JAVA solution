class Solution {
    public boolean areAlmostEqual(String s1, String s2) {
       if(s1.length()!=s2.length())
       return false;
       int c=0,k=0;
       int arr[]=new int[2];
       for(int i=0;i<s1.length();i++)
       {
           if(s1.charAt(i)==s2.charAt(i))
           c++;
           else
           {
               if(k>1)
               return false;
               arr[k]=i;
               k++;
           }
       }
       if(s1.charAt(arr[0])==s2.charAt(arr[1]) && s1.charAt(arr[1])==s2.charAt(arr[0]))
       return true;
       return false;
       }    
}
